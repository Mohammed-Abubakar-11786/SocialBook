  let likeCount = 0;
  let commentCount = 0;
  let shareCount = 0;
  function increaseLikeCount() {
    likeCount++;
    document.getElementById("likeCount").innerText = likeCount;
  }

  function increaseCommentCount() {
    commentCount++;

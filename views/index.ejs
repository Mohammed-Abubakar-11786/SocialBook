<% layout("/layouts/boilerplate") -%>
<style>
  .homePage {
    display: flex;
    padding: 0 1rem 0.5rem 1rem;
    justify-content: center;
  }
  .left-section {
    flex-basis: 25%;
    background-color: white;
    border: 1px solid rgb(0, 0, 0);
    border-radius: 1rem;
    margin-right: 0.5rem;
    position: sticky;
    top: 70px;
    height: 100svh;
  }
  .left-section-top {
    height: 50%;
  }
  .middle-section {
    flex-basis: 47%;
    height: 100vh;
    border: 1px solid black;
    border-radius: 1rem;
    border-bottom: 0px;
    overflow-y: auto;
    height: 100svh;
  }
  .story-section {
    height: 25%;
  }
  .new-post {
    height: 25%;
  }
  .right-section {
    flex-basis: 25%;
    background-color: white;
    border: 1px solid rgb(0, 0, 0);
    border-radius: 1rem;
    position: sticky;
    top: 70px;
    margin-left: 0.5rem;
  }
  .right-section-top {
    height: 50%;
  }
</style>
<body>
  <div class="homePage">
    <div class="left-section sticky">
      <div class="left-section-top">
        <%- include("includes/left-section-top.ejs") %>
      </div>
      <hr />
      <div class="left-section-bottom">
        <%- include("includes/left-section-bottom.ejs") %>
      </div>
    </div>
    <div class="middle-section">
      <div class="story-section">
        <%- include("includes/story-section.ejs") %>
      </div>
      <hr />
      <div class="new-post"><%- include("includes/new-post.ejs") %></div>
      <hr />
      <div class="view-post"><%- include("includes/view-post.ejs") %></div>
    </div>
    <div class="right-section">
      <div class="right-section-top">
        <%-include("includes/right-section-top.ejs") %>
      </div>
      <hr />
      <div class="right-section-bottom">
        <%-include("includes/right-section-bottom.ejs") %>
      </div>
    </div>
  </div>
</body>

<% layout("/layouts/boilerplate") -%>
<style>
  .homePage {
    display: flex;
    padding: 0 1rem 0.5rem 1rem;
    justify-content: center;
  }
  .left-section {
    flex-basis: 25%;
    background-color: white;
    border-radius: 1rem;
    margin-right: 0.5rem;
    position: sticky;
    top: 70px;
    height: 100vh;
  }
  .left-section-top {
    height: fit-content;
  }
  .middle-section {
    width: 47%;
    border-bottom: 0px;
    overflow-y: auto;
    height: 100vh;
  }

  .new-post {
    height: 25%;
  }
  .right-section {
    flex-basis: 25%;
    background-color: white;
    border-radius: 1rem;
    position: sticky;
    top: 70px;
    margin-left: 0.5rem;
  }
  .right-section-top {
    height: 50%;
  }
  hr {
    margin: 0;
    width: 80%;
  }
</style>
<body style="background-color: #dedede">
  <div class="homePage">
    <div class="left-section sticky">
      <div class="left-section-top">
        <%- include("includes/left-section-top.ejs") %>
      </div>
      <center><hr /></center>
      <div class="left-section-bottom">
        <%- include("includes/left-section-bottom.ejs") %>
      </div>
    </div>
    <div class="middle-section">
      <div class="story-section">
        <%- include("includes/story-section.ejs") %>
      </div>
      <div class="new-post mt-2"><%- include("includes/new-post.ejs") %></div>
      <div class="view-post mt-2"><%- include("includes/view-post.ejs") %></div>
    </div>
    <div class="right-section">
      <div class="right-section-top">
        <%-include("includes/right-section-top.ejs") %>
      </div>
    </div>
  </div>
</body>
